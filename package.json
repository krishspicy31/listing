{
  "name": "culturalite-monorepo",
  "version": "1.0.0",
  "description": "Culturalite platform - A monorepo containing frontend, backend, and testing packages",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:coverage": "turbo test:coverage",
    "test:e2e": "turbo test:e2e",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "setup": "npm install && npm run setup:backend && npm run setup:e2e",
    "setup:backend": "cd apps/backend && pip3 install -r requirements.txt",
    "setup:e2e": "npm run setup --workspace=e2e-tests",
    "postinstall": "npm run setup:backend",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev:frontend": "turbo dev --filter=frontend",
    "dev:backend": "turbo dev --filter=backend",
    "build:frontend": "turbo build --filter=frontend",
    "build:frontend-only": "npm ci --include-workspace-root --workspace=frontend && turbo build --filter=frontend",
    "build:backend": "npm run setup:backend && turbo build --filter=backend",
    "test:frontend": "turbo test --filter=frontend",
    "test:backend": "turbo test --filter=backend",
    "test:e2e:only": "turbo test --filter=e2e-tests",
    "start": "turbo start",
    "start:frontend": "turbo start --filter=frontend",
    "start:backend": "turbo start --filter=backend"
  },
  "keywords": [
    "monorepo",
    "turborepo",
    "culturalite",
    "nextjs",
    "django",
    "typescript",
    "react",
    "rest-api"
  ],
  "author": "Culturalite Development Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.5.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.0.0"
}
